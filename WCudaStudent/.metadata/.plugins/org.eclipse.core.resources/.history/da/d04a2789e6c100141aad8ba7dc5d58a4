ImageFonctionel* MandelbrotProvider::createGL(void)
    {
    AnimableFonctionel_I*  ptrMOO=MandelbrotProvider::createMOO();

    return new ImageFonctionel(ptrMOO);
    }

AnimableFonctionel_I* MandelbrotProvider::createMOO(void)
    {
    int dw = 16 * 60 *2; // =32*30=960
    int dh = 16 * 60; // =32*30=960

    int n = 52;

    // JULIA
    float x1 = -0.327167;
    float x2 = -0.2156;
    float y1 = -0.086667;
    float y2 = 0.0434;
    float c1 = ;
    float c2 = ;

    // MANDELBROT
    float x1 = -2.1;
    float x2 = -1.3;
    float y1 = 0.8;
    float y2 = 1.4;
    float c1 = ;
    float c2 = ;

    // animation para
    float dt = 2 * PI / 400;

    return new MandelbrotMOO(dw, dh, dt, n, x1,x2,y1,y2,c1,c2);
    }

